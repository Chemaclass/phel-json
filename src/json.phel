(ns mabasic\json\json)

(defn- phel-to-php [x]
    (cond
        (or (table? x) (struct? x) (array? x) (tuple? x))
            (let [a (php/array)]
                (foreach [k v x]
                    (cond
                        (or (table? v) (struct? v) (array? v) (tuple? v) (set? v)) (php/aset a (str k) (phel-to-php v))
                        (keyword? v) (php/aset a (str k) (str v))
                        true (php/aset a (str k) v)))
                a)
        (set? x)
            (let [a (php/array)]
                (foreach [v x]
                    (cond
                        (or (table? v) (struct? v) (array? v) (tuple? v) (set? v)) (php/apush a (phel-to-php v))
                        (keyword? v) (php/apush a (str v))
                        true (php/apush a v)))
                a)
        (keyword? x) (str x)
        true x))

(defn encode [v]
    (php/json_encode (phel-to-php v)))